                        <ComboBox fx:id="fromState" prefWidth="150.0" GridPane.columnIndex="2" GridPane.rowIndex="4" />
                        <Label text="To State" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                        <ComboBox fx:id="toState" prefWidth="150.0" GridPane.columnIndex="2" GridPane.rowIndex="5" />
                     </children>
                  </GridPane>
               </children>
            </VBox>
         </children>
      </HBox>
      <GridPane GridPane.columnIndex="1" GridPane.rowIndex="1">
