                  <Label text="States" />
                  <ListView fx:id="statesListView" prefHeight="175.0" prefWidth="135.0" />
                  <HBox>
                     <children>
                        <Button fx:id="addStateButton" onAction="#addStateButton" prefWidth="90.0" text="Add" />
                        <Button fx:id="removeStateButton" onAction="#removeStateButton" prefWidth="90.0" text="Remove" />
                     </children>
                  </HBox>
               </children>
            </VBox>
            <VBox GridPane.columnIndex="1" GridPane.rowIndex="1">
               <children>
                  <Label text="Edges" />
                  <ListView fx:id="edgesListView" prefHeight="175.0" prefWidth="135.0" />
                  <HBox>
                     <children>
                        <Button fx:id="addEdgeButton" onAction="#addEdgeButton" prefWidth="90.0" text="Add" />
                        <Button fx:id="removeEdgeButton" onAction="#removeEdgeButton" prefWidth="90.0" text="Remove" />
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children>
         <rowConstraints>
            <RowConstraints />
            <RowConstraints />
         </rowConstraints>
      </GridPane>
      <HBox GridPane.rowIndex="1">
