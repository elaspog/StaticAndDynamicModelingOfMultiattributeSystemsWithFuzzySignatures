            <Button fx:id="cancelButton" onAction="#cancelButton" prefWidth="100.0" text="Cancel" GridPane.columnIndex="1" GridPane.rowIndex="5" />
            <Button fx:id="okButton" onAction="#okButton" prefWidth="100.0" text="Ok" GridPane.columnIndex="2" GridPane.rowIndex="5" />
