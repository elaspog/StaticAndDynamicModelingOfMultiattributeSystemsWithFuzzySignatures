                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                     </rowConstraints>
                     <children>
                        <Label text="Name" />
                        <TextField fx:id="stateNameTextField" GridPane.columnIndex="1" GridPane.columnSpan="2" />
                        <TextArea fx:id="stateDescriptionTextArea" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="1" GridPane.rowSpan="2" />
                        <Label text="Description" GridPane.rowIndex="1" />
                        <RadioButton fx:id="initialStateRadioButton" mnemonicParsing="false" text="Initial" GridPane.rowIndex="3">
                           <toggleGroup>
                              <ToggleGroup fx:id="stateGroup" />
                           </toggleGroup></RadioButton>
                        <RadioButton fx:id="normalStateRadioButton" mnemonicParsing="false" text="Normal" toggleGroup="$stateGroup" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                        <RadioButton fx:id="terminalStateRadioButton" mnemonicParsing="false" text="Terminal" toggleGroup="$stateGroup" GridPane.columnIndex="2" GridPane.rowIndex="3" />
