                        <ComboBox fx:id="fuzzySetSystem" prefWidth="150.0" GridPane.columnIndex="1" GridPane.columnSpan="2" />
                        <Spinner GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="1" />
                     </children>
                  </GridPane>
               </children>
            </VBox>
         </children>
      </HBox>
      <GridPane GridPane.columnIndex="1">
